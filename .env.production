# Production Environment Variables for crowetrade.com

# Frontend (Next.js)
NEXT_PUBLIC_API_URL=https://api.crowetrade.com
NEXT_PUBLIC_WS_URL=wss://api.crowetrade.com/ws
NEXT_PUBLIC_PORTFOLIO_URL=https://portfolio.crowetrade.com
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_SITE_URL=https://crowetrade.com
NODE_ENV=production

# Backend Common
CORS_ORIGINS=https://crowetrade.com,https://www.crowetrade.com
ALLOWED_HOSTS=api.crowetrade.com,portfolio.crowetrade.com,crowetrade.com
SSL_REDIRECT=true
SECURE_HEADERS=true
PYTHONUNBUFFERED=1
LOG_LEVEL=info

# Execution Service
EXECUTION_HOST=0.0.0.0
EXECUTION_PORT=8080
PAPER_MODE=true
RUN_MODE=production

# Portfolio Service  
PORTFOLIO_HOST=0.0.0.0
PORTFOLIO_PORT=8080
RISK_ENGINE_ENABLED=true

# Database (if using)
# DATABASE_URL=postgresql://user:pass@hostname:5432/crowetrade_prod

# Redis (if using)
# REDIS_URL=redis://hostname:6379/0

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
