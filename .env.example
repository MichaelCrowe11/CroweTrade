# CroweTrade Production Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/crowetrade
REDIS_URL=redis://localhost:6379/0

# Message Bus Configuration  
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=your_kafka_username
KAFKA_SASL_PASSWORD=your_kafka_password

# API Keys - External Data Providers
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINNHUB_API_KEY=your_finnhub_key
QUANDL_API_KEY=your_quandl_key

# Trading Venue Configuration
IEX_API_KEY=your_iex_key
POLYGON_API_KEY=your_polygon_key

# Security & Authentication
JWT_SECRET_KEY=your_256_bit_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Risk Management
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=50000
MAX_DRAWDOWN=0.20
VAR_CONFIDENCE_LEVEL=0.99

# Monitoring & Observability
PROMETHEUS_GATEWAY_URL=http://localhost:9091
GRAFANA_URL=http://localhost:3000
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# Trading Configuration
TRADING_MODE=PAPER  # PAPER, LIVE
DEFAULT_RISK_BUDGET=0.02
DEFAULT_LAMBDA_TEMPERING=0.25

# Feature Store
FEATURE_STORE_PATH=/data/features
MODEL_REGISTRY_PATH=/data/models

# Deployment
ENVIRONMENT=production  # development, staging, production
SERVICE_PORT=8080
HEALTH_CHECK_INTERVAL=30

# Rate Limiting
API_RATE_LIMIT=1000
EXECUTION_RATE_LIMIT=100

# Circuit Breaker Settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Performance Optimization
WORKER_PROCESSES=4
MAX_CONCURRENT_REQUESTS=100
CONNECTION_POOL_SIZE=20